source 'https://rubygems.org'

# Emojis
gem 'jemoji', "0.10.1"
# The jeyll dependency
gem "jekyll", "3.7.4"
# Some basic CSS to save time
gem "minima", "2.5.0"
# For GH support
gem "github-pages", "192"
# SEO (might not be necessary)
gem "jekyll-seo-tag", "2.5.0"
# SASS/SCSS support (because CSS is annoying)
gem "sass", "3.5.7"

# To get it to run locally on Windows
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
gem "wdm", "~> 0.1.0" if Gem.win_platform?